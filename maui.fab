    case starter.type
    when OL_PARAGRAPH, OL_DIVERT, OL_CHUNK then
      wr.add_space
      weave_ctxt_section_part starter, fabric, wr,
          symbolism: symbolism
      start_index += 1
    else
      wr.linebreak
