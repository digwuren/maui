<< Outer definitions >>:
  class ::String
    # Local enclosed variable for [[#to_xml]]
    char_entities = {
      '&' => '&amp;',
      '<' => '&lt;',
      '>' => '&gt;',
      '"' => '&quot;',
      "'" => '&apos;',
    }.freeze

    define_method :to_xml do ||
      return gsub(/[&<>'"]/){char_entities[$&]}
