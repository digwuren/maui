  def add_space data = ' '
    @port.print @curspace.prepared_output if @curspace
    @port.print @curword.prepared_output
    @curspace = OpenStruct.new(
      prepared_output: data,
      width: data.length)
    @curword = OpenStruct.new(
      prepared_output: '',
      width: 0)
