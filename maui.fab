  def styled sequence_name
    sequence = @palette[sequence_name]
    raise 'unknown palette entry' unless sequence
    prev_mode = @curmode
    begin
      @curmode = sequence
      @curword.prepared_output << sequence
      yield
    ensure
      @curmode = prev_mode
      @curword.prepared_output << prev_mode
    end
    return
  end


