    @port.print @curword.content
    @curspace = OpenStruct.new(
      content: data,
      width: data.length)
    @curword = OpenStruct.new(
      content: '',
      width: 0)
    @curpos += data.length

    # Like with [[add_plain]], we'll clear [[@vsep]] here.
    @vsep = -1
    return
  end


