<< Other methods >>:
  def commatise_oxfordly items
    result = markup
    items.each_with_index do |item, i|
      unless i.zero? then
        unless items.length == 2 then
          result.plain ','
        end
        result.space
        if i == items.length - 1 then
          result.plain 'and'
          result.space
        end
      end
      result.push *item
    end
    return result
  end


